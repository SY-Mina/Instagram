<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/personal_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_back_edit"
            android:layout_width="28dp"
            android:layout_height="60dp"
            android:src="@drawable/arrow"
            android:scaleType="fitCenter"
            android:background="@color/white"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="개인 정보"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/personal_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/personal_top"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="비즈니스나 반려동물 등에 사용된 계정인 경우에도 회원님의 개인 정보를 입력하세요. 공개 프로필에 포함되지 않습니다."
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_edit_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/personal_info"
        app:layout_constraintStart_toStartOf="@id/personal_info"
        android:text="이메일 주소"
        android:textSize="15sp"
        android:textColor="@color/blackForText"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/et_edit_email"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_email"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="@color/grey"/>

    <TextView
        android:id="@+id/tv_edit_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_edit_email"
        app:layout_constraintStart_toStartOf="@id/personal_info"
        android:text="전화번호"
        android:textSize="15sp"
        android:textColor="@color/blackForText"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/et_edit_phone"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_phone"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="@color/grey"/>

    <TextView
        android:id="@+id/tv_edit_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_edit_phone"
        app:layout_constraintStart_toStartOf="@id/personal_info"
        android:text="성별"
        android:textSize="15sp"
        android:textColor="@color/blackForText"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/et_edit_gender"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_gender"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="@color/grey"/>

    <TextView
        android:id="@+id/tv_edit_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_edit_gender"
        app:layout_constraintStart_toStartOf="@id/personal_info"
        android:text="생일"
        android:textSize="15sp"
        android:textColor="@color/blackForText"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/et_edit_birthday"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_birthday"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="@color/grey"/>

</androidx.constraintlayout.widget.ConstraintLayout>