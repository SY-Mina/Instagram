<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/iv_following_prof"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img1"
        android:scaleType="centerInside"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/tv_following_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id Name"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_following_prof"
        app:layout_constraintTop_toTopOf="@id/iv_following_prof"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_following_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_following_id"
        app:layout_constraintStart_toStartOf="@id/tv_following_id"
        android:text="Name"
        android:textSize="15sp"
        android:textColor="@color/blackForText"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_following_more"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:src="@drawable/btn_more"
        android:background="@color/white"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_following_follow"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="팔로잉"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:background="@drawable/round_button_white"
        app:layout_constraintEnd_toStartOf="@id/btn_following_more"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>